#!/bin/bash -e
#
# script/bootstrap
# mas
#
# Installs gem tools, installs Swift dependencies via CocoaPods and sorts
# the Xcode project file references.
#

PREFIX=/usr/local

# Override default prefix path with optional 1st arg
if test -n "$1"; then
    PREFIX="$1"
fi

echo "==> ðŸ”¥ Uninstalling mas from $PREFIX"

rm -fr "$PREFIX/Frameworks/MasKit.framework"
rm -f "$PREFIX/bin/mas"
